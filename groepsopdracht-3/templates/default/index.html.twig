{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="card col-9">
            <div class="card-header">
                Welcome {% if app.user %}
                {{ app.user.UserName }}
                    {% else %}
                    Anonymous
                {% endif %}
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    <div class="row">
                        <div class="col-6">
                            Messages
                        </div>
                    </div>
                </h5>
                {% if messages %}
                    <table id="homepageMessageTable" class="table table-striped">
                        <thead>
                        <tr>
                            <th>Message</th>
                            <th>Category</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for message in messages %}
                            <tr>
                                <td><a href="#" data-id="{{ message.id }}">{{ message.content }}</a></td>
                                <td>{{ message.category }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <li>No messages found.</li>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}
